<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-800 p-8 text-white">
  <div class="flex justify-end w-full">
    <a href="/logout" class="px-3 py-2 bg-red-500 text-black rounded-md">Logout</a>
</div>

  <h1 class="text-2xl font-bold mb-4">Admin Dashboard</h1>
  
  <form action="/adminAdd" method="POST" class="mb-4">
    <input type="text" name="username" placeholder="New Admin Username" class="border p-2 rounded-lg mr-2 text-black" required>
    <input type="password" name="password" placeholder="New Admin Password" class="border p-2 rounded-lg mr-2 text-black" required>
    <button type="submit" class="bg-yellow-400 text-black p-2 rounded-lg">Add Admin</button>
  </form>
  <h1 class="text-2xl font-bold mb-4">Feedback Dashboard</h1>
  <a href="./showFeedbacks" class="px-3 py-2 bg-blue-500 rounded-lg">Show feedbacks</a>
  <h2 class="text-2xl font-semibold mb-2 mt-6">Current Admins</h2>
  <ul>
    <% admins.forEach(admin => { %>
      <li class="border-b p-2 flex justify-between">
        <span><%= admin.username %></span>
        <form action="/adminDelete/<%= admin._id %>" method="POST" class="inline">
          <button type="submit" class="text-red-500">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

</body>
</html>
